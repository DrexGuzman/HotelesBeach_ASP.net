
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card p-4" style="width: 30rem;">
        <div class="text-center">
            <h3>Ingresa a tu cuenta</h3>
        </div>
        <form method="post" action="/Usuarios/Login">
            @Html.AntiForgeryToken()
            <div class="form-group mt-3">
                <label for="email">Correo</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Correo" required />
            </div>
            <div class="form-group mt-3">
                <label for="password">Contraseña</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Contraseña" required />
            </div>
            @if (ViewBag.Error != null)
            {
                <div class="text-danger mt-2">@ViewBag.Error</div>
            }
            <div class="form-group mt-4">
                <button type="submit" class="btn btn-warning btn-block">Iniciar sesión</button>
            </div>
            <div class="text-center mt-2">
                <small>¿Eres nuevo? <a href="/Usuarios/Register">Regístrate</a></small>
            </div>
        </form>
    </div>
</div>

