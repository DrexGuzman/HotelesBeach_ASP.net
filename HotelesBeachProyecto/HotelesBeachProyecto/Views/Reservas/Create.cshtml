@model HotelesBeachProyecto.Models.Reserva
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    

    <form asp-action="CrearReserva" method="post" class="bg-white mb-3">

        <h5 class="text-center p-2 text-primary">Nueva Reservación</h5>

        <!-- Información del Cliente -->
        <fieldset class="border p-4 mb-4">
            <legend class="w-auto px-3 text-primary">Información del cliente</legend>

            <div class="row mb-3 px-4">
                <div class="col-md-6">
                    <label asp-for="ClienteCedula" class="form-label">Cédula del cliente</label>
                    <input asp-for="ClienteCedula" class="form-control" placeholder="Ingrese la cédula del cliente" />
                    <span asp-validation-for="ClienteCedula" class="text-danger"></span>
                </div>
                <div class="col-md-6 d-flex align-items-end">
                    <button type="button" class="btn btn-outline-primary w-100 mt-1">
                        <i class="bi bi-search"></i> Buscar cliente
                    </button>
                </div>
            </div>
        </fieldset>

        <!-- Información de la Reservación -->
        <fieldset class="border p-4 mb-4">
            <legend class="w-auto px-3 text-primary">Detalles de la reservación</legend>

            <div class="row mb-3 px-4">
                <div class="col-md-6">
                    <label asp-for="PaqueteId" class="form-label">Paquete</label>
                    <select asp-for="PaqueteId" class="form-select">
                        <option value="">Seleccione un paquete</option>
                        <!-- Ejemplo de opciones dinámicas -->
                        <option value="1">Paquete Básico</option>
                        <option value="2">Paquete Premium</option>
                    </select>
                    <span asp-validation-for="PaqueteId" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="FormaPagoId" class="form-label">Forma de pago</label>
                    <select asp-for="FormaPagoId" class="form-select">
                        <option value="">Seleccione una forma de pago</option>
                        <!-- Ejemplo de opciones dinámicas -->
                        <option value="1">Tarjeta de crédito</option>
                        <option value="2">Transferencia bancaria</option>
                    </select>
                    <span asp-validation-for="FormaPagoId" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3 px-4">
                <div class="col-md-4">
                    <label asp-for="CantidadNoches" class="form-label">Cantidad de noches</label>
                    <input asp-for="CantidadNoches" class="form-control" type="number" min="1" max="365" />
                    <span asp-validation-for="CantidadNoches" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="CantidadPersonas" class="form-label">Cantidad de personas</label>
                    <input asp-for="CantidadPersonas" class="form-control" type="number" min="1" max="8" />
                    <span asp-validation-for="CantidadPersonas" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Descuento" class="form-label">Descuento (%)</label>
                    <input asp-for="Descuento" class="form-control" type="number" min="0" step="0.01" />
                    <span asp-validation-for="Descuento" class="text-danger"></span>
                </div>
            </div>
        </fieldset>

        <!-- Información de Montos -->
        <fieldset class="border p-4 mb-4">
            <legend class="w-auto px-3 text-primary">Montos de la reservación</legend>

            <div class="row mb-3 px-4">
                <div class="col-md-4">
                    <label asp-for="MontoRebajado" class="form-label">Monto rebajado</label>
                    <input asp-for="MontoRebajado" class="form-control" type="number" readonly />
                    <span asp-validation-for="MontoRebajado" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="MontoFinal" class="form-label">Monto final</label>
                    <input asp-for="MontoFinal" class="form-control" type="number" readonly />
                    <span asp-validation-for="MontoFinal" class="text-danger"></span>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="button" class="btn btn-outline-secondary w-100">
                        <i class="bi bi-calculator"></i> Calcular montos
                    </button>
                </div>
            </div>
        </fieldset>

        <!-- Botón de envío -->
        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg mb-4">
                <i class="bi bi-check-circle"></i> Guardar reservación
            </button>
        </div>
    </form>
</div>

<!-- Validaciones de cliente -->
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}

